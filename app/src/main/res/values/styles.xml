<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:paddingStart">@dimen/sixteen_dp</item>
        <item name="android:paddingRight">@dimen/sixteen_dp</item>
    </style>

    <!--RecyclerView Styles-->
    <style name="BaseRecyclerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingBottom">@dimen/six_dp</item>
        <item name="android:paddingTop">@dimen/six_dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="LinearRecyclerView" parent="BaseRecyclerView">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="GridRecyclerView" parent="BaseRecyclerView">
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>

    <style name="BaseCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/cornerRadius</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!--android:stateListAnimator="@animator/btn_state"-->
    </style>

    <style name="BaseCard.Spaced">
        <item name="android:layout_marginStart">@dimen/four_dp</item>
        <item name="android:layout_marginEnd">@dimen/four_dp</item>
        <item name="android:layout_marginTop">@dimen/six_dp</item>
        <item name="android:layout_marginBottom">@dimen/six_dp</item>

    </style>
</resources>
